<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="org.kesslerdn.tictactoe"/>
	
	<bean id="positions" class="java.util.ArrayList">
	    <constructor-arg>
	        <list>
	            <bean class="org.kesslerdn.tictactoe.board.position.StartPosition" p:value="1"/>
				<bean class="org.kesslerdn.tictactoe.board.position.CenterPosition" p:value="2"/>
				<bean class="org.kesslerdn.tictactoe.board.position.EndPosition" p:value="3"/>
				<bean class="org.kesslerdn.tictactoe.board.position.StartPosition" p:value="4"/>
				<bean class="org.kesslerdn.tictactoe.board.position.CenterPosition" p:value="5"/>
				<bean class="org.kesslerdn.tictactoe.board.position.EndPosition" p:value="6"/>
				<bean class="org.kesslerdn.tictactoe.board.position.StartPosition" p:value="7"/>
				<bean class="org.kesslerdn.tictactoe.board.position.CenterPosition" p:value="8"/>
				<bean class="org.kesslerdn.tictactoe.board.position.EndPosition" p:value="9"/>                
	        </list>
	    </constructor-arg>
	</bean>
	<bean id="firstPlayer" class="org.kesslerdn.tictactoe.game.player.HumanPlayer" p:mark="X" p:gameControl-ref="consoleGameControl"/>
	<bean id="secondPlayer" class="org.kesslerdn.tictactoe.game.player.HumanPlayer" p:mark="O" p:gameControl-ref="consoleGameControl"/>
	<bean id="twoPlayerTurn" class="org.kesslerdn.tictactoe.game.player.TwoPlayerTurn" c:first-ref="firstPlayer" c:second-ref="secondPlayer"/>
	
	<bean id="bufferedReader" class="org.kesslerdn.tictactoe.view.io.BufferedReaderFactory" factory-method="create"/>	
</beans>
